# Copy this file to .env before running docker compose on Red Hat Linux
# cp .env.example .env

# Public backend URL used by browser-side requests from frontend
# Replace with your Red Hat server IP or DNS name
NEXT_PUBLIC_API_URL=http://192.168.0.10:8000

# Allowed frontend origins for FastAPI CORS (comma-separated)
# Replace IP/DNS as needed
CORS_ORIGINS=http://192.168.0.10:3000,http://localhost:3000,http://127.0.0.1:3000

# Optional SMB credentials used by docker-compose-with-network-shares.yml
SMB_USERNAME=smbgrp
SMB_PASSWORD=smbgrp
